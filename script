local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/ionlyusegithubformcmods/1-Line-Scripts/main/Mobile%20Friendly%20Orion')))()
local Window = OrionLib:MakeWindow({Name = "Rich Hub", HidePremium = false, IntroText = "Rich Hub", SaveConfig = true, ConfigFolder = "Scripts"})

local Tab = Window:MakeTab({
	Name = "Universal Scripts",
	Icon = "rbxassetid://4370318685",
	PremiumOnly = false
})

-- Get the Players and ReplicatedStorage services

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Get the PlayerEvent remote event from ReplicatedStorage
local PlayerEvent = ReplicatedStorage.PlayerEvent

-- Function to join a player
local function joinPlayer(playerName)
    -- Get the player by name
    local player = Players:FindFirstChild(playerName)

    -- Check if the player exists
    if player then
        -- Get the local player
        local localPlayer = Players.LocalPlayer

        -- Set the LocalPlayer's Character to the desired player's Character
        localPlayer.Character = player.Character
    else
        -- Make a notification
        OrionLib:MakeNotification({
            Name = "Error!",
            Content = "Player not found!",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
    end
end

-- Make a notification
OrionLib:MakeNotification({
	Name = "Join a player",
	Content = "Enter the name of the player you want to join:",
	Image = "rbxassetid://4483345998",
	Time = 10
})

-- Add a textbox
Tab:AddTextbox({
	Name = "Player",
	Default = "Enter player name...",
	TextDisappear = true,
	Callback = function(Value)
		-- Call the joinPlayer function with the input value
		joinPlayer(Value)
	end	  
})

-- Fire the PlayerEvent remote event when a player joins
Players.PlayerAdded:Connect(function(Player)
    PlayerEvent:FireAllClients(Player.Name, "OnPlayerJoined")
end)

-- Fire the PlayerEvent remote event when a player leaves
Players.PlayerRemoving:Connect(function(Player)
    PlayerEvent:FireAllClients(Player.Name, "OnPlayerLeft")
end)